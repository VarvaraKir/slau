{
  "version": 3,
  "configurePresets": [
    {
      "name": "dev",
      "binaryDir": "${sourceDir}/build",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "WITH_TESTS": true,
        "CMAKE_COMPILE_WARNING_AS_ERROR": true
      }
    },
    {
      "name": "dev-unix",
      "description": "gcc/clang preset for dev",
      "hidden": false,
      "inherits": ["dev"],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -pedantic -Wshadow -Wconversion -Wsign-conversion"
      }
    },
    {
      "name": "dev-win",
      "description": "msvc preset for dev",
      "hidden": false,
      "inherits": ["dev"],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl",
        "CMAKE_CXX_FLAGS": "/W4 /EHsc"
      }
    }
  ]
}